#!/usr/bin/env python

import sys
from smount.smount import SerialMounter

def execute(mounter, command, arg):
    if command == "list":
        available = mounter.get_mount_points()
        for i in available:
            print(f"{i}")
    elif command == "mount":
        mount = mounter.get(arg)
        if mount is None:
            print(f"{command}: '{arg}' could not be found")
            return
        if mount.ismounted():
            print(f"{command}: '{arg}' is already mounted")
            return
        mount.mount()
    elif command == "help":
        print("Available commands: list, mount, unmount")
    elif command in [ "umount", "unmount"]:
        mount = mounter.get(arg)
        if mount is None:
            print(f"{command}: '{arg}' could not be found")
            return
        if not mount.ismounted():
            print(f"{command}: '{arg}' is not mounted")
            return
        mount.unmount()
    else:
        print(f"Unknown command {command}")

def main(argv):
    mounter = SerialMounter()
    command = None
    arg = None

    if len(argv) == 1:
        mount_points = mounter.get_mount_points()
        while True:
            for i in range(len(mount_points)):
                print(f"{i} - {mount_points[i]}")

            try:
                selected = input("select> ")
            except KeyboardInterrupt:
                selected = 'q' # CTRL-C
            except EOFError:
                selected = 'q' # CTRL-D

            if selected == 'q':
                sys.exit(0)
            if selected in [ 'r', '' ]:
                continue

            if int(selected) > len(mount_points) or int(selected) < 0:
                raise RuntimeError

            point = mount_points[int(selected)]
            point.toggle()
        return

    if len(argv) >= 2:
        command = argv[1]

    if len(argv) >= 3:
        arg = argv[2]

    execute(mounter, command, arg)

if __name__ == "__main__":
    # execute only if run as a script
    main(sys.argv)
